root_dir = "#{File.expand_path(File.dirname(__FILE__))}/.."

# Run setup for the platform needed platform
desc "Setup"
before_all do |lane, options|
  case @platform
  when :ios
    import "#{root_dir}/legacy/ios/fastlane/setup.rb"
    smf_setup_ios_fastlane_commons(options)
  when :android
    UI.message("Setup for android is not implemented yet")
  when :flutter
    UI.message("Setup for flutter is not implemented yet")
  else
    UI.message("There is no platform \"#{@platform}\", exiting...")
    raise "Unknown platform"
  end
end